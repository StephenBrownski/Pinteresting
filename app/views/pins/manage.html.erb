<div class="panel panel-default">
  <div class="panel-heading">
    <div class="btn-group pull-right">
      <%= link_to new_pin_path, class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus-sign"></span>
        New Pin
      <% end %>
      <%= link_to new_board_path, class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus-sign"></span>
        New Board
      <% end %>
    </div>
    <h1>Manage Pins</h1>

    <i><%= page_entries_info @posts %></i>
  </div>

  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Image</th>
          <th>Description</th>
          <th>Board</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= image_tag pin.image.url(:thumb), class: 'img-thumbnail' %></td>
            <td><%= pin.description %></td>
            <td><%= pin.board.name if pin.board.present? %></td>
            <td>
              <%= link_to 'Show', pin %>
              <% if pin.user == current_user %>
                |
                <%= link_to 'Edit', edit_pin_path(pin) %>
                |
                <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <div class="text-center">
      <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
      <%= link_to new_pin_path, class: 'btn btn-primary pull-right' do %>
        <span class="glyphicon glyphicon-plus-sign"></span>
        New Pin
      <% end %>
    </div>
  </div>
</div>


